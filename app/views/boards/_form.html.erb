<%= form_with(model: board, local: true) do |form| %>
  <% if board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
      <% board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :board_name, class: 'form-control my-form-field'%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :board_description, class: 'form-control my-form-field'%>
  </div>

  <div class="field" style="display:none;">
    <%= form.label :leader_id %>
    <%= form.number_field :leader_id, id: :board_leader_id, value: current_user.id,class: 'form-control my-form-field'%>
  </div>

  <div class="actions">
    <%= form.submit  class: "btn btn-primary" %>
    <%= link_to 'Cancel', root_path, class: "btn btn-primary sign-btn" %>
  </div>

<% end %>
