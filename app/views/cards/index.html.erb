<% provide(:title, 'Cards') %>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="jumbotron">
    <h2>Cards</h2>

    <table>
      <thead>
        <tr>
          <th>List</th>
          <th>Content</th>
          <th>Deadline</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cards.each do |card| %>
          <tr>
            <td><%= card.list_id %></td>
            <td><%= card.content %></td>
            <td><%= card.deadline %></td>
            <td><%= link_to 'Show', card %></td>
            <td><%= link_to 'Edit', edit_card_path(card) %></td>
            <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>
