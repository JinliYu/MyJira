<table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="bodyTable" bgcolor="#F2F2F2">
    <tr>
        <td align="center" valign="top">
            <table border="0" cellpadding="20" cellspacing="0" width="600" id="emailContainer">
                <tr>
                    <td align="center" valign="top">
                        <table border="0" cellpadding="20" cellspacing="0" width="100%" id="emailHeader">
                            <tr>
                                <td align="left" valign="top" style="font-family:Arial, Helvetica, sans-serif;">
                                    Hi <%= @user.name %>,
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td align="center" valign="top">
                        <table border="0" cellpadding="20" cellspacing="0" width="100%" id="emailBody">
                            <tr>
                                <td align="center" valign="top" style="font-family:Arial, Helvetica, sans-serif;">
																	You received a comment on MyJira from <%= @note.comment.from_user.name %> in card
																	<%= link_to @note.card.content, board_url(@note.card.list.board, :card_id => @note.card.id)%>:
                                </td>
                            </tr>
														<tr>
																<td align="center" valign="top" style="font-family:'Comic Sans MS', cursive, sans-serif;">
																	<%= @note.comment.context %>
																</td>
														</tr>
														<tr>
															<td align="center" valign="top" style="font-family:Arial, Helvetica, sans-serif;">
																You can directly reply to this email to reply to the comment.
															</td>
														</tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td align="center" valign="top">
                        <table border="0" cellpadding="20" cellspacing="0" width="100%" id="emailFooter">
                            <tr>
                                <td align="right" valign="top" style="font-family:Arial, Helvetica, sans-serif;">
                                    &mdash; MyJira Team
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
