

<table class="body-wrap">
	<tr>
		<td></td>
		<td class="container" width="600">
			<div class="content">
				<table class="main" width="100%" cellpadding="0" cellspacing="0">
					<tr>
						<td class="content-wrap">
							<table width="100%" cellpadding="0" cellspacing="0">
                <tr>
									<td class="content-block">
										Hi <%= @user.name %>,
									</td>
								</tr>
								<tr>
									<td class="content-block">
										You received a comment on MyJira from <%= @note.comment.from_user.name %> in card
										<%= link_to @note.card.content, card_url(@note.card)%>:
									</td>
								</tr>
								<tr>
									<td class="content-block">
										<%= @note.comment.context %>
									</td>
								</tr>
								<tr>
									<td class="content-block">
										&mdash; MyJira Team
									</td>
								</tr>
							</table>
						</td>
					</tr>
				</table>
				</div>
		</td>
		<td></td>
	</tr>
</table>
