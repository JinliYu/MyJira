<%= form_with(model: list, local: true) do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :list_name, class: 'form-control my-form-field' %>
  </div>

  <div class="field" style="display:none;">
    <%= form.label :board_id %>
    <%= form.number_field :board_id, id: :list_board_id, value: @board.id, class: 'form-control my-form-field' %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary"%>
    <a href=”#” onClick=javascript:history.go(-1); class="btn btn-primary sign-btn">Cancel</a>
  </div>
<% end %>
