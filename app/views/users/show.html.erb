<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Leader</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= User.find(board.leader_id).name %></td>
        <td><%= link_to 'Show', board %></td>
      </tr>
    <% end %>
  </tbody>
  <%= link_to 'New Board', new_board_path %>
</table>
