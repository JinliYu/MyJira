<% provide(:title, "Log in") %>
<div class="container">
  <div class="jumbotron">
    <h2 style="text-align:center;">Log in</h2>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control my-form-field' %>

          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control my-form-field' %>

          <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>
        <br/>
        <p>New user? &nbsp;&nbsp;<%= link_to "Sign up now!", signup_path %></p>
      </div>
    </div>
  </div>
</div>
